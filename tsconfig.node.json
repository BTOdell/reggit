{
    "compileOnSave": true,
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true
    }
}