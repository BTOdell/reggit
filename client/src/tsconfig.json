{
    "compileOnSave": true,
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "outDir": "../.build",
        "module": "ES2020",
        "moduleResolution": "Node",
        "target": "ES2020",
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "importHelpers": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "classnameTransform": "camelCaseOnly"
                }
            }
        ],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true
    }
}